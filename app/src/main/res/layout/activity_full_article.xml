<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fullArticle.FullArticleActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/indent_s"
    android:paddingEnd="@dimen/indent_s">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/indent_xs"
        android:paddingBottom="@dimen/indent_m">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_image_height"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_m"
            style="@style/typoTitleH2Bold"
            tools:text="title" />

        <TextView
            android:id="@+id/publish_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_s"
            style="@style/typoSecondNonActive"
            tools:text="publish date" />

        <TextView
            android:id="@+id/full_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_m"
            tools:text="full text" />

        <TextView
            android:id="@+id/full_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_m"
            tools:text="full text" />

    </LinearLayout>
</ScrollView>